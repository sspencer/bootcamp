<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Campers</li>
</ol>

<div class="page-header">
  <h1>Campers <small>by last name: {{upper selectedLetter}}</small></h1>
</div>

<div class="container">
{{{alphaPager selectedLetter}}}
</div>


<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>{{{sort '/campers' query 'ID' 'id'}}}</th>
        <th>{{{sort '/campers' query 'Name' 'name'}}}</th>
        <th>{{{sort '/campers' query 'Year Started' 'yearStarted'}}}</th>
        <th>{{{sort '/campers' query 'Last Tour' 'current_tour_id'}}}</th>
        <th>{{{sort '/campers' query '# Camps' 'camps'}}}</th>
        <th>{{{sort '/campers' query 'Occupation' 'occupation'}}}</th>
      </tr>
    </thead>
    <tbody>
    {{#each campers}}
    <tr>
      <td>{{ id }}</td>
      <td><a href="/campers/{{ id }}">{{ firstName }} {{ lastName }}</a></td>
      <td>{{ yearStarted }}</td>
      <td>{{ current_tour_id }}</td>
      <td>{{ camps }}</td>
      <td>{{ occupation }}</td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>
