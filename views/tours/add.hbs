<ol class="breadcrumb">
  <li><a href="/tours">Tours</a></li>
  <li class="active">Add Tour</li>
</ol>

<div class="container">

    <div class="page-header">
      <h1><span class="glyphicon glyphicon-plus"></span> Add Tour #{{tourId}}</h1>
    </div>

  <div class="alert alert-info">
        <span class="glyphicon glyphicon-info-sign"></span> Creating a tour automatically adds all campers from the current bootcamp to the next.
    </div>


    <form class="form-horizontal" role="form" method="post">

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <div class="form-group">
        <label for="inputStartDate" class="col-sm-2 control-label">Start Date</label>
        <div class="col-sm-2 input-group">
          <input name="startDate" class="form-control" id="inputStartDate" value="{{startDate}}">
        </div>
      </div>

      <div class="form-group">
        <label for="inputEndDate" class="col-sm-2 control-label">End Date</label>
        <div class="col-sm-2 input-group">
          <input name="endDate" class="form-control" id="inputEndDate" value="{{endDate}}">
        </div>
      </div>

      <div class="form-group">
        <label for="inputFullPrice" class="col-sm-2 control-label">Full Price</label>
        <div class="col-sm-2 input-group">
          <span class="input-group-addon">$</span>
          <input name="fullPrice" class="form-control" id="inputFullPrice" value="360">
        </div>
      </div>

      <div class="form-group">
        <label for="inputBasePrice" class="col-sm-2 control-label">Base Price</label>
        <div class="col-sm-2 input-group">
          <span class="input-group-addon">$</span>
          <input name="basePrice" class="form-control" id="inputBasePrice" value="250">
        </div>
      </div>

      <div class="form-group">
        <label for="inputBuffetPrice" class="col-sm-2 control-label">Buffet Price</label>
        <div class="col-sm-2 input-group">
          <span class="input-group-addon">$</span>
          <input name="buffetPrice" class="form-control" id="inputBuffetPrice" value="150">
        </div>
      </div>

      <div class="form-group">
        <label for="inputDailyPrice" class="col-sm-2 control-label">Daily Price</label>
        <div class="col-sm-2 input-group">
           <span class="input-group-addon">$</span>
           <input name="dailyPrice" class="form-control" id="inputDailyPrice" value="10">
        </div>
      </div>

      <br>

      <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-2">
          <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Create Tour {{tourId}}</button>
        </div>
      </div>
    </form>
</div>
