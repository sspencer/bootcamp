<ol class="breadcrumb">
  <li><a href="/tours">Tours</a></li>
  <li class="active">Add Tour</li>
</ol>

<div class="container">

  <div class="page-header">
    <h1><span class="glyphicon glyphicon-plus"></span> Add Tour #{{obj.tourId}}</h1>
  </div>

  <div class="alert alert-info">
    <span class="glyphicon glyphicon-info-sign"></span> Select the campers who have already registered for Tour #{{obj.tourId}}.
    Their records from the previous camp will automatically be copied over.
  </div>

  <form class="form-horizontal" role="form" method="post">

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="tourId" value="{{obj.tourId}}">

  	<table class="table table-striped table-condensed">
	  	<tbody>
	  	  {{#each campers}}
	  	  <tr>
		  	  <td>
		  	  	<input type="checkbox" value="user_{{userid}}" checked>
		  	  	&nbsp;
			  	  {{ firstName }} {{ lastName }}
			  	</td>
	  	  </tr>
			  {{/each}}
			</tbody>
	  </table>

    <br>

      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
          <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Create Tour {{tourId}}</button>
        </div>
      </div>
    </form>
</div>
