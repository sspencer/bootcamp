<ol class="breadcrumb">
  <li><a href="/tours">Tours</a></li>
  <li><a href="/tours/{{tourId}}">Tour {{tourId}}</a></li>
  <li class="active">Stats</li>
</ol>

<div class="container">
	<div class="page-header">
	  <h1><span class="glyphicon glyphicon-heart"></span> Stats</h1>
	</div>


  <ul class="nav nav-tabs">
    {{#if stats1}}
    <li class="active"><a href="#">Starting Stats</a></li>
    <li><a href="?stats=2">Ending Stats</a></li>
    {{else}}
    <li><a href="?stats=1">Starting Stats</a></li>
    <li class="active"><a href="#">Ending Stats</a></li>
    {{/if}}
  </ul>
  <p>&nbsp;</p>

  <p>
    <span class="label label-info">NOTE</span> &nbsp;&nbsp;For entering mile time,
    enter <em>623</em> for a time of <strong>6:23</strong>,
    or <em>1019</em> for a time of <strong>10:19</strong>.
  </p>

  <form class="form-horizontal well" role="form" method="post">
    <input type="hidden" name="tour_id" value="{{../tourId}}">
    <input type="hidden" name="week" value="{{../week}}">
    <div class="form-group">
      <div class="col-sm-3" align="right"><strong>Name</strong></div>
      <div class="col-sm-2"><strong>Pushups</strong></div>
      <div class="col-sm-2"><strong>Situps</strong></div>
      <div class="col-sm-2"><strong>Mile</strong></div>
    </div>
    {{#each campers}}
    <div class="form-group">
      <label for="situp_{{user_id}}" class="col-sm-3 control-label">{{firstName}} {{lastName}}</label>
      {{#if ../stats1}}
      <div class="col-sm-2">
        <input type="text" class="form-control" id="situp_{{user_id}}" value="{{pushup1}}">
      </div>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="situp_{{user_id}}" value="{{situp1}}">
      </div>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="situp_{{user_id}}" value="{{mile1}}">
      </div>
      {{else}}
      <div class="col-sm-2">
        <input type="text" class="form-control" id="situp_{{user_id}}" value="{{pushup2}}">
      </div>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="situp_{{user_id}}" value="{{situp2}}">
      </div>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="situp_{{user_id}}" value="{{mile2}}">
      </div>
      {{/if}}

    </div>
    {{/each}}
    <div class="form-group">
      <div class="col-sm-4">&nbsp;</div>
      <div class="col-sm-2">
        <button type="submit" class="btn btn-primary">Save Activity</button>
      </div>
    </div>
  </form>


</div>
